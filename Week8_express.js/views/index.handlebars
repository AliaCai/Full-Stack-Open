<h1 class="text-center mb-3">{{title}}</h1> <!--use variable in handlebar: 2 brackets-->

<form action="/api/members"  method="POST" class="mb-4">
<div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control"><!--send im request body like json in postman, urlencoded in index will deal with it-->
</div>
<div class="form-group">
    <label for="email">Email</label>
    <input type="email" name="email" class="form-control">
</div>
<input type="submit" value="Add Member" class="btn btn-primary btn-block">
</form>
<h4>Members</h4>

<ul>
    {{#each members}}
        <li class="list-group-it">{{this.name}}:{{this.email}}</li>
    {{/each}}
</ul>

<a href="/api/members" class="btn btn-light mt-4">Visit API</a><!--show us json-->
